<script>
    $('#AmtBeforeTax').change(function ()
    {
        var taxval = '';
        var Amount = '';
        var total = '';
        var Final = '';
        taxval = $('#Tax').val();
        Amount = $('#AmtBeforeTax').val();
        total = parseFloat(Amount) * parseInt(taxval) / 100;
        Final = parseFloat(Amount) + parseFloat(total);

            $('#TaxAmount').val(total.toFixed());
            $('#AmtAfterTax').val(Final.toFixed());
            var TaxType = $('#TaxType').val();
            if (TaxType == "Local") {
                var SGST = 0;
                var CGST = 0;
                var CGSTAmount = "";
                var SGSTAmount = "";
                var taxvalue = parseInt($('#Tax').val());
                SGST = taxvalue / 2;
                CGST = taxvalue / 2;
                $('#SGST').val(SGST);
                $('#CGST').val(CGST);
                CGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
                SGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
                $('#CGSTAmount').val(CGSTAmount);
                $('#SGSTAmount').val(SGSTAmount);
                $('#InstatePanel').show();
            }
            else if (TaxType == "Outward") {
                $('#InstatePanel').hide();
            }
    });
    $('#Tax').change(function () {
        var taxval = '';
        var Amount = '';
        var total = '';
        var Final = '';
        taxval = $('#Tax').val();
        Amount = $('#AmtBeforeTax').val();
        total = parseFloat(Amount) * parseInt(taxval) / 100;
        Final = parseFloat(Amount) + parseFloat(total);
        $('#TaxAmount').val(total.toFixed());
        $('#AmtAfterTax').val(Final.toFixed());
        var TaxType = $('#TaxType').val();
        if (TaxType == "Local") {
            var SGST = 0;
            var CGST = 0;
            var CGSTAmount = "";
            var SGSTAmount = "";
            var taxvalue = parseInt($('#Tax').val());
            SGST = taxvalue / 2;
            CGST = taxvalue / 2;
            $('#SGST').val(SGST);
            $('#CGST').val(CGST);
            CGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
            SGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
            $('#CGSTAmount').val(CGSTAmount);
            $('#SGSTAmount').val(SGSTAmount);
            $('#InstatePanel').show();
        }
        else if (TaxType == "Outward") {
            $('#InstatePanel').hide();
        }
    });
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+100",
        });
    });
    $("#btnSubmit").click(function () {
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
            },
            complete: function () {
                $(".processing").hide();
            }
        });
        var flag = 0;
        var cntrl;
        $('input.sn-required,select.sn-required,textarea.sn-required').each(function () {
            cntrl = $(this);
            if (cntrl.val().toString().length == 0) {
                flag = 1;
                if (!cntrl.hasClass('sn-error'))
                    cntrl.removeClass('border-success');
                cntrl.addClass('sn-error');
                swal.fire({
                    title: "Error",
                    text: "Something is missing",
                    icon: "error",
                    timer: 6000,
                });
            }
            else {
                if (cntrl.hasClass('sn-error')) cntrl.removeClass('sn-error');
            }
        });
        if (flag == 1) return;
        if (window.FormData !== undefined) {
            var fileUpload = $("#UploadInvoice").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            };
        }
        var Taxtype = $("#TaxType").val();
        var SGST = "";
        var CGST = "";
        var IGST = "";
        var IGSTAmount = "";
        var SGSTAmount = "";
        var CGSTAmount = "";
        if (Taxtype == 'Local') {
            var taxvalue = parseInt($('#Tax').val());
            SGST = taxvalue / 2;
            CGST = taxvalue / 2;
            CGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
            SGSTAmount = parseFloat($('#TaxAmount').val()) / 2;
        }
        else if (Taxtype == 'Outward') {
            IGST = parseInt($('#Tax').val());
            IGSTAmount = parseFloat($('#TaxAmount').val());
        }
        fileData.append("Id", $("#Id").val()),
        fileData.append("CompanyName", $("#CompanyName").val()),
        fileData.append("Date", $("#Date").val()),
        fileData.append("InvoiceNo", $("#InvoiceNo").val()),
        fileData.append("AmtBeforeTax", $("#AmtBeforeTax").val()),
        fileData.append("Address", $("#Address").val()),
        fileData.append("PANNo", $("#PANNo").val()),
        fileData.append("TaxType", $("#TaxType").val()),
        fileData.append("Tax", $("#Tax").val()),
        fileData.append("TaxAmount", $("#TaxAmount").val()),
        fileData.append("AmtAfterTax", $("#AmtAfterTax").val()),
        fileData.append("GSTNo", $("#GSTNo").val()),
        fileData.append("IGST", IGST),
        fileData.append("CGST", CGST),
        fileData.append("SGST", SGST),
        fileData.append("IGSTAmount", IGSTAmount),
        fileData.append("CGSTAmount", CGSTAmount),
        fileData.append("SGSTAmount", SGSTAmount),
        $.ajax
       ({
        type: "Post",
        url: "/Admin/Purchase",
        data: fileData,
        contentType: false,
        dataType: "json",
        processData: false,
        success: function (resultData) {
            if (resultData.split(',')[0].indexOf('Sorry') > 0)

                MsgBox(resultData.split(',')[0], resultData.split(',')[1]);

            else {
                MsgBoxRedirect(resultData.split(',')[0], resultData.split(',')[1], '/Admin/PurchaseOrder');
            }
        }
    });
    });
    function MsgBox(message, atype) {
        $.alert(message, { title: '', type: atype, autoClose: true, closeTime: 1500, minTop: 100 });
    }
    function MsgBoxRedirect(message, atype, location) {
        $.alert(message, {
            title: '', type: atype, autoClose: true, closeTime: 1500, minTop: 100, onClose: function () { window.location = location; }
        });
    }
    $('.sn-delete').click(function () {
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false
        })

        swalWithBootstrapButtons.fire({
            title: 'Are you sure?',
            text: "You won't be Delete!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.value) {
                var me = $(this);
                var userId = me.attr('userid');
                var cateogy = {
                    Id: userId,
                }

                $.ajax({
                    type: "POST",
                    url: "/Admin/DeletePurchase",
                    data: JSON.stringify(cateogy),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (message) {
                        window.location.href = "/Admin/PurchaseOrder";
                    }
                });
                swalWithBootstrapButtons.fire(
                  'Deleted!',
                  'Your file has been deleted.',
                  'success'
                )
            } else if (
                /* Read more about handling dismissals below */
              result.dismiss === Swal.DismissReason.cancel
            ) {
                swalWithBootstrapButtons.fire(
                  'Cancelled',
                  'Your file is safe :)',
                  'error'
                )
            }
        })
    });
</script>
