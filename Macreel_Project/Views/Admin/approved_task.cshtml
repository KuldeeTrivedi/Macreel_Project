<section class="content" style="padding: 0 0.2rem;">
    <div class="container">
        <section class="content">
            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead style="padding-bottom: 0; height: 1px !important;">
                <tr  style="background-color: rgba(22,160,133,0.9); color: white;">
                    <th style="padding:5px;">
                        S.No.
                    </th>
                    <th style="padding:5px;">
                        Title
                    </th>
                    <th style="padding:5px;">
                        Assigned Date
                    </th>
                    <th style="padding:5px;">
                        Assigned Employee
                    </th>
                    <th style="padding:5px;">
                        Employee Status
                    </th>
                    <th style="padding:5px;">
                        Action
                    </th>
                </tr>
                    </thead>
                <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.current_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.assigned_emp)
                        </td>
                        <td>
                            @{ var status = @Html.Raw(item.emp_status).ToString(); }

                            @if (status == "Complete")
                            {
                                <span class="badge badge-success">@Html.Raw(item.emp_status)</span>
                            }
                            else if (status == "Not Complete")
                            {
                                <span class="badge badge-danger">@Html.Raw(item.emp_status)</span>
                            }
                        </td>
                        <td>
                            <a href="/admin/updateTaskViewById?id=@(item.id)"><i class="fas fa-eye"></i></a>
                        </td>

                    </tr>
                }
                    </tbody>
            </table>


        </section>
    </div>
</section>













