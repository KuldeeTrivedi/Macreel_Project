
@model Macreel_Project.Models.Bussiness.Employee
@{
    ViewBag.Title = "DatewiseTaskSheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-body .Head1 th {
        font-size: 14px;
        font-weight: 600;
        padding: 8px;
    }

    .Head1 {
        background: #1f3e63;
        /* padding: 10px; */
        color: white;
    }

    .card-body table tr td {
        padding: 5px;
    }

    .tbod {
        font-size: 12px;
    }

    .sn-error {
        border-color: red;
    }
</style>
<div class="panel-header panel-header-sm">
    <div class="panel-header panel-header-sm">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <h1 class="m-0">DATE WISE TASKSHEET</h1>
                    </div><!-- /.col -->
                    <!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </div>
</div>
<div class="panel-header panel-header-sm">
</div>
<div class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div id="Clients">
                        <h6 style="text-align:center;">
                            <b>Employee Detail</b>
                        </h6>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="table-bg">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead class="Head1">
                                                <tr class="head-title">
                                                    <th>Employee Code</th>
                                                    <th>Name</th>
                                                    <th>Designation</th>
                                                    <th>ContactNo</th>
                                                    <th>Email-Id</th>
                                                    <th>DOJ</th>
                                                </tr>
                                            </thead>
                                            <tbody class="tbod">
                                                <tr>
                                                    <td><span id="EmployeeCode"></span>@Model.EmployeeCode</td>
                                                    <td><span id="Name"></span>@Model.EmployeeName</td>
                                                    <td><span id="Designation"></span>@Model.Designation</td>
                                                    <td><span id="ContactNo"></span>@Model.Mobile</td>
                                                    <td><span id="EmailId"></span>@Model.EmailId</td>
                                                    <td><span id="DOJ"></span>@Model.DOJ</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr class="Head1">
                                <th style="width:40px;">S.No</th>
                                <th style="width:60px;">Date</th>
                                <th>ProjectName</th>
                                <th>Task</th>
                                <th style="width:60px;">Hour</th>
                                <th style="width:360px;">Description</th>
                                <th style="width:60px;">Status</th>
                                <th>Remark</th>
                            </tr>
                        </thead>
                        <tbody class="tbod">
                            @if (ViewBag.list != null)
                            {
                                var sn = 1;
                                foreach (var item in ViewBag.list as List<Macreel_Project.Models.Bussiness.TaskSheets>)
                                {
                                    <tr>
                                        <td style="width:40px;">@sn</td>
                                        <td style="width:60px;">@item.Date1</td>
                                        <td>@item.Project1</td>
                                        <td>@item.Task1</td>
                                        <td style="width:60px;">@item.Hour1</td>
                                        <td style="width:360px;">@item.Description1</td>
                                        <td style="width:60px;">@item.Status1</td>
                                        <td>@item.Remark1</td>
                                    </tr>
                                    sn++;
                                }
                            }
                        </tbody>
                    </table>
                </div><!-- end content-->
            </div><!--  end card  -->
        </div> <!-- end col-md-12 -->
    </div>
</div>





