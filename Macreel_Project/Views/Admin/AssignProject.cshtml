<div class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="TypeValidation" class="form-horizontal">
                <div class="card ">
                    @*<div class="card-header ">
                            <h4 class="card-title">Assign Project To Employee</h4>
                        </div>*@
                    <div class="card-body ">
                        <div class="row">

                            <div class="col-md-2">
                                <label for="project name">Project Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="ProjectName" class="form-control sn-required">
                                        <option>--Select Project--</option>
                                        @if (ViewBag.Project != null)
                                        {
                                            foreach (var item in ViewBag.Project as List<SelectListItem>)
                                            {
                                                if (Model.ProjectCode == item.Value)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }

                                            }
                                        }
                                    </select>

                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="assigndate">Assign Date</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group sn-required">
                                    <input class="form-control" id="AssignDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" name="required" required="true" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>
                        <div id="Clients" style="display:none;">
                            <h6 style="text-align:center;">
                                Project Details
                            </h6>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="table-bg">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead style="background-color: rgba(22,160,133,0.9); color: white">
                                                    <tr>
                                                        <th>
                                                            Project Name
                                                        </th>
                                                        <th>
                                                            Client Name
                                                        </th>
                                                        <th>
                                                            Starting Date
                                                        </th>
                                                        <th>
                                                            Completion Date
                                                        </th>
                                                        <th>
                                                            Delivery Date
                                                        </th>
                                                        <th>
                                                            Amount
                                                        </th>
                                                        <th>
                                                            Status
                                                        </th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr>
                                                        <td><span id="Project"></span>  </td>
                                                        <td><span id="ClientName"></span></td>
                                                        <td><span id="Start"></span></td>
                                                        <td><span id="Comp"></span></td>
                                                        <td><span id="Del"></span></td>
                                                        <td><span id="Amount"></span></td>
                                                        <td><span id="Status"></span></td>
                                                    </tr>

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-2">
                                <label for="employeename">Employee Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="EmployeeName" class="form-control sn-required" multiple="multiple">
                                        @if (ViewBag.emp != null)
                                        {
                                            foreach (var item in ViewBag.emp as List<SelectListItem>)
                                            {
                                                if (Model.EmployeeId == item.Value)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }

                                            }
                                        }
                                    </select>

                                </div>
                            </div>
                            @*<div class="col-sm-4">
                                    <div class="form-group">
                                        <select id="EmployeeName" class="form-control form-control-lg sn-required" multiple="multiple">

                                            @if (ViewBag.emp != null)
