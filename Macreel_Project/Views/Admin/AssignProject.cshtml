                                <div class="form-group sn-required">
                                    <textarea style="width: 100%;" class="sn-required " rows="3" id="Description"> @Model.Description</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        @if (Model.Id != 0)
