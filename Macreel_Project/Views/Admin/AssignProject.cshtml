<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({
            dateFormat: 'yy-mm-dd', // Adjust the date format as per your requirement
            minDate: 0 // Disallows dates before today
        });
    });
</script>
<script>
    jQuery(document).ready(function ($) {
        $('#EmployeeName').fSelect({
            placeholder: 'Select Employee',
            numDisplayed: 3,
            overflowText: '{n} selected',
            noResultsText: 'No results found',
            searchText: 'Search',
            showSearch: true,
        })
    });
    $(document).ready(function () {
        var Id = '';
        Id = $("#Id").val();
        if (Id != 0) {
            GetDetail();
        }
    });
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+100",
        });
    });
    $('#ProjectName').change(function () {
        var me = $(this);
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
                me.attr('disabled', 'disabled');
            },
            complete: function () {
                $(".processing").hide();
                me.attr('disabled', false);
            }
        });
        var ProjectCode = {
            ProjectCode: $(this).val()
        }
        $.ajax({
            type: "POST",
            url: "/Admin/GetProjectDetail",
            data: JSON.stringify(ProjectCode),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (resultData) {
                if (resultData != null) {
                    $('#Project').text(resultData.ProjectName);
                    $('#ClientName').text(resultData.ClientName);
                    $('#Start').text(resultData.ProjectStartingDate);
                    $('#Comp').text(resultData.CompletionDate);
                    $('#Del').text(resultData.ProjectDeliveryDate);
                    $('#Amount').text(resultData.TotalAmount);
                    $('#Status').text(resultData.ProjectStatus);
                    $("#Clients").show();

                }
            }
        });
    });
    $("#btnSubmit").click(function () {
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
            },
            complete: function () {
                $(".processing").hide();
            }
        });
        var flag = 0;
        var cntrl;
        $('input.sn-required,select.sn-required,textarea.sn-required').each(function () {
            cntrl = $(this);
            if (cntrl.val().toString().length == 0) {
                flag = 1;
                if (!cntrl.hasClass('sn-error'))
                    cntrl.removeClass('border-success');
                cntrl.addClass('sn-error');
                swal.fire({
                    title: "Error",
                    text: "Something is missing",
                    icon: "error",
                    timer: 6000,
                });
            }
            else {
                if (cntrl.hasClass('sn-error')) cntrl.removeClass('sn-error');
            }
        });
        var EmployeeId = []
        var EmployeeName = []
        $("#EmployeeName :selected").map(function (i, el) {
            var emp = $(el).val();
            var emname = $(el).text();
            EmployeeId.push(emp)
            EmployeeName.push(emname)

        });
        if (flag == 1) return;
        if (window.FormData !== undefined) {


            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
        }
        fileData.append("Id", $("#Id").val()),
            fileData.append("ProjectCode", $("#ProjectName").val()),
            fileData.append("ProjectName", $('#ProjectName').find("option:selected").text()),
            fileData.append("EmployeeId", EmployeeId),
            fileData.append("EmployeeName", EmployeeName),
            fileData.append("Description", $("#Description").val()),
            fileData.append("AssignDate", $("#AssignDate").val()),
            $.ajax
                ({
                    type: "Post",
                    url: "/Admin/InsertProjectEmployee",
                    data: fileData,
                    contentType: false,
                    dataType: "json",
                    processData: false,
                    success: function (message) {
                        if (message == "success") {
                            swal.fire({
                                title: "Success",
                                text: "Successfully Added!",
                                icon: "success",
                                timer: 6000,
                            });
                            window.location.href = "/Admin/AssignProject";
                        }
                        else if (message == "update") {
                            swal.fire({
                                title: "Success",
                                text: "Successfully Updated!",
                                icon: "success",
                                timer: 6000,
                            });
                            window.location.href = "/Admin/AssignProject";
                        }
                        else {
                            swal.fire({
                                title: "Error",
                                text: "Something Wrong!",
                                icon: "error",
                                timer: 6000,
                            });
                        }

                    }
                });
    });
    function GetDetail() {
        var ProjectCode = {
            ProjectCode: $("#ProjectName").val()
        }
        $.ajax({
            type: "POST",
            url: "/Admin/GetProjectDetail",
            data: JSON.stringify(ProjectCode),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (resultData) {
                if (resultData != null) {
                    $('#Project').text(resultData.ProjectName);
                    $('#ClientName').text(resultData.ClientName);
                    $('#Start').text(resultData.ProjectStartingDate);
                    $('#Comp').text(resultData.CompletionDate);
                    $('#Del').text(resultData.ProjectDeliveryDate);
                    $('#Amount').text(resultData.TotalAmount);
                    $('#Status').text(resultData.ProjectStatus);
                    $("#Clients").show();

                }
            }
        });
    }
</script>





