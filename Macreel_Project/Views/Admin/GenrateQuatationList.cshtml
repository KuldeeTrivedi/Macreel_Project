<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="toolbar">
                    </div>
               
                    <section class="content" style="padding: 0 0.2rem;">
                        <div class="container ">
                            <section class="content">
                                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead style="line-height: normal; height: 1px !important;">
                                        <tr style="background-color: rgba(22,160,133,0.9); color: white;">
                                            <th style="padding:4px; white-space: nowrap;">
                                                Sr No.
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Quatation No.
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Company Name
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Quatation Type
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Work Scope
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Total Amount
                                            </th>
                                            <th style="padding:4px; white-space: nowrap;">
                                                Action
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody class="tbod">

                                        @if (ViewBag.list != null)
                                        {
                                            var sn = 1;
                                            foreach (var item in ViewBag.list as List<Macreel_Project.Models.Bussiness.quatation>)
                                            {
                                                <tr>
                                                    <td>@sn</td>
                                                    <td>@item.QuatationNo</td>
                                                    <td>@item.CompanyName</td>
                                                    @*<td style="width:250px;">@item.Type</td>*@
                                                    <td>
                                                        @if (item.Type == "Other")
                                                        {
                                                            <div>Services</div>
                                                        }
                                                        else
                                                        {
                                                            @item.Type
                                                        }
                                                    </td>
                                                    <td>@Html.Raw(item.WorkScope)</td>
                                                    <td>@item.TotalAmount</td>
                                                    <td style="width:169px;">
                                                        <a href="/Admin/QuatationPreview?QuatationNo=@item.QuatationNo" data-toggle="tooltip" data-placement="bottom" data-original-title="Quatation Preview" title="Quatation Preview"><i class="fas fa-file-pdf mr-2" style="color:red;"></i></a>
                                                        @if (item.Status == 0)
                                                        {
                                                            <a href="/Admin/EditGenrateQuatation?QuatationNo=@item.QuatationNo" class="edit mr-2" data-toggle="tooltip" data-placement="bottom" data-original-title="Edit" title="Edit"><i class="fa fa-pencil" style="color: darkgreen !important;"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a class="sn-editing mr-2" data-toggle="tooltip" data-placement="bottom" data-original-title="Edit" title="Edit"><i class="fa fa-pencil" style="color: darkgreen !important;"></i></a>
                                                        }
                                                        @if (item.Status == 0)
                                                        {
                                                            <a userId="@item.QuatationNo" class="sn-delete mr-2"><i class="fas fa-trash" style="color:red;"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a class="sn-warning mr-2"><i class="fas fa-trash" style="color:red;"></i></a>
                                                        }
                                                        @if (item.Status == 0)
                                                        {
                                                            <a href="/Admin/AddPIWithQuatation?QuatationNo=@item.QuatationNo" class="alert-primary" data-toggle="tooltip" data-placement="bottom" data-original-title="Ganrate PI" title="Ganrate PI"><i class="far fa-plus-square"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a class="alert-primary sn-add" data-toggle="tooltip" data-placement="bottom" data-original-title="Ganrate PI" title="Ganrate PI"><i class="far fa-plus-square"></i></a>
                                                        }

                                                    </td>
                                                </tr>
                                                sn++;
                                            }
                                        }

                                    </tbody>
                                </table>
                        </div><!-- end content--></section>
                </div><!--  end card  -->
        </div> <!-- end col-md-12 -->
    </div>
</div>
<script src="~/scripts/jquery-3.4.1.min.js"></script>
<script>

    $('.sn-warning').click(function () {
        swal.fire({
            title: "Don't Delete",
            text: "Performa Invoice Ganrated",
            icon: "warning",
        });
    });
    $('.sn-add').click(function () {
        swal.fire({
            title: "PI Ganrated",
            text: "Performa Invoice AllReady Ganrated",
            icon: "warning",
        });
    });
    $('.sn-editing').click(function () {
        swal.fire({
            title: "Don't Edit",
            text: "Performa Invoice  Ganrated",
            icon: "warning",
        });
    });
    $('.sn-delete').click(function () {
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success mr-2',
                cancelButton: 'btn btn-danger mr-2'
            },
            buttonsStyling: false
        })

        swalWithBootstrapButtons.fire({
            title: 'Are you sure?',
            text: "You won't be Delete!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.value) {
                var me = $(this);
                var userId = me.attr('userid');
                var cateogy = {
                    QuatationNo: userId,
                }

                $.ajax({
                    type: "POST",
                    url: "/Admin/DeleteQuatation",
                    data: JSON.stringify(cateogy),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (message) {
                        window.location.href = "/Admin/GenrateQuatationList";
                    }
                });
                swalWithBootstrapButtons.fire(
                  'Deleted!',
                  'Your file has been deleted.',
                  'success'
                )
            } else if (
                /* Read more about handling dismissals below */
              result.dismiss === Swal.DismissReason.cancel
            ) {
                swalWithBootstrapButtons.fire(
                  'Cancelled',
                  'Your file is safe :)',
                  'error'
                )
            }
        })
    });
</script>


