<div class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="TypeValidation" class="form-horizontal">
                <div class="card ">
                    <div class="card-body ">
                        <div class="row">

                            <div class="col-md-2">
                                <label for="">Employee Name</label>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <select id="EmployeeName" class="form-control sn-required">
                                        <option>--Select Employee--</option>
                                        @if (ViewBag.EMP != null)
                                        {
                                            foreach (var item in ViewBag.EMP as List<SelectListItem>)
                                            {

                                                <option value="@item.Value">@item.Text</option>

                                            }
                                        }
                                    </select>

                                </div>
                            </div>
                        </div>
                        <div id="Clients" style="display:none;">
                            <h6 style="text-align:center;">
                                <b>Employee Detail</b>
                            </h6>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="table-bg">
                                        <div class="table-responsive">
                                            <table class="table">
           
                                                <thead  style="padding-bottom: 0; height: 1px !important;">
                                                    <tr style="background-color: rgba(22,160,133,0.9); color: white;">
                                                        <th style="padding:5px;">
                                                            Employee Code
                                                        </th>
                                                        <th style="padding:5px;">
                                                            Name
                                                        </th>
                                                        <th style="padding:5px;">
                                                            Designation
                                                        </th>
                                                        <th style="padding:5px;">
                                                            Contact No
                                                        </th>
                                                        <th style="padding:5px;">
                                                            Email-Id
                                                        </th>
                                                        <th style="padding:5px;">
                                                            DOJ
                                                        </th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr>
                                                        <td><span id="EmployeeCode"></span>  </td>
                                                        <td><span id="Name"></span></td>
                                                        <td><span id="Designation"></span></td>
                                                        <td><span id="ContactNo"></span></td>
                                                        <td><span id="EmailId"></span></td>
                                                        <td><span id="DOJ"></span></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <section class="content" style="padding: 0 0.2rem;">
                        <div class="container">
                            <section class="content">
                                <div class="card-body" style="display:none" id="tableLeave">
                                    <table id="datatable" class="table table-striped table-bordered" >
                                        <thead style="padding-bottom: 0; height: 1px !important;">
                                            <tr style="background-color: rgba(22,160,133,0.9); color: white;">
                                                <th style="padding:5px;">
                                                    Sr No.
                                                </th>
                                                <th style="padding:5px;">
                                                    No Of Leave
                                                </th>
                                                <th style="padding:5px;">
                                                    Type Of Leave
                                                </th>
                                                <th style="padding:5px;">
                                                    Description
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="tbod">
                                            @if (ViewBag.list != null)
                                            {
                                                var sn = 1;
                                                foreach (var item in ViewBag.list as List<Macreel_Project.Models.Bussiness.LeaveTypes>)
                                                {
                                                    <tr>
                                                        <td style="width:20px !important;"><input type="checkbox" name="Items" value="@item.Id" id="example-select-all">@item.Id</td>
                                                        <td style="width:20px !important;"><input type="text" id="row-1-age" name="row-1-age" value=""></td>
                                                        <td style="width:20px !important;">@item.LeaveType</td>
                                                        <td>@item.Description</td>
                                                    </tr>
                                                    sn++;
                                                }
                                            }

                                        </tbody>
                                    </table>

                                </div>
                                </section>
                                <div class="card-footer text-center">
                                    <button type="button" class="btn btn-primary" id="btnSubmit">Submit</button>
                                </div>
                        </div></section>
</form>
        </div>

    </div>
</div>

<div class="processing" style="display: none">
    <div class="center">
        <span style="color:red;"><i style="font-size:14pt; font-weight:bold; opacity:1!important; margin-top:4px;" class="fa fa-spin fa-spinner"></i> Processing...</span>
    </div>
</div>
<script src="~/scripts/jquery-3.4.1.min.js"></script>
<script>

    $('#EmployeeName').change(function () {
        var me = $(this);
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
                me.attr('disabled', 'disabled');
            },
            complete: function () {
                $(".processing").hide();
                me.attr('disabled', false);
            }
        });
        var Id = {
           Id: $(this).val()
        }
        $.ajax({
            type: "POST",
            url: "/Admin/GetEmployeeDetails",
            data: JSON.stringify(Id),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (resultData) {
                if (resultData != null) {

                    $('#EmployeeCode').text(resultData.EmployeeCode);
                    $('#Name').text(resultData.EmployeeName);
                    $('#Designation').text(resultData.Designation);
                    $('#ContactNo').text(resultData.Mobile);
                    $('#EmailId').text(resultData.EmailId);
                    $('#DOJ').text(resultData.DOJ);
                    $("#Clients").show();
                    $("#tableLeave").show();
                }
            }
        });

    });
    $('#btnSubmit').click(function () {
        var me = $(this);
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
                me.attr('disabled', 'disabled');
            },
            complete: function () {
                $(".processing").hide();
                me.attr('disabled', false);
            }
        });
        var LeaveId = []
        var NoofLeave = []
        var LeaveType = []
        $('input:checkbox[name=Items]:checked').each(function () {
            var id = $(this).closest("tr").find('td:eq(0)').text();
            var NoofLeaves = $(this).closest("tr").find('td:eq(1)> input').val();
            var LeaveTypes = $(this).closest("tr").find('td:eq(2)').text();
            LeaveId.push(id)
            NoofLeave.push(NoofLeaves)
            LeaveType.push(LeaveTypes)
        });
         var fileData = new FormData();
        fileData.append("EmployeeId", $("#EmployeeName").val()),
        fileData.append("EmployeeName", $("#EmployeeName").find("option:selected").text()),
        fileData.append("Leave", NoofLeave),
         fileData.append("Type", LeaveType),

        $.ajax({
            type: "Post",
            url: "/Admin/InsertAssignLeave",
            data: fileData,
            contentType: false,
            dataType: "json",
            processData: false,
            success: function (message) {
                if (message == "success") {
                    swal.fire({
                        title: "Status",
                        text: "Leave Applied Successfully",
                        timer: 6000,
                        icon: "success"
                    });
                    window.location.href = "/Admin/AssignLeave";
                }
                else
                    swal.fire({
                        title: "Status",
                        text: "Leave Already Applied!",
                        timer: 6000,
                        icon: "error"
                    });
            }
        })
    });

</script>





