<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="TypeValidation" class="form-horizontal">
                <div class="card ">
                    @*<div class="card-header ">
                        <h4 class="card-title">Add Project</h4>
                    </div>*@
                    <div class="card-body ">
                        <div class="row">

                            <div class="col-md-2">
                                <label for="inputUsername">Company Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="CompanyName" class="form-control sn-required">
                                        <option>--Select Client--</option>
                                        @if (ViewBag.client != null)
                                        {
                                            foreach (var item in ViewBag.client as List<SelectListItem>)
                                            {
                                                if (Model.CompanyId == item.Value)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }

                                            }
                                        }
                                    </select>

                                </div>
                            </div>
                            
                            <div class="col-md-2">
                                <label for="inputUsername">Client Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" readonly id="ClientName" type="text" name="required" required="true" />
                                </div>
                            </div>
                        </div>
                        <div id="Clients" style="display:none;">
                            <h5 style="text-align:center;">
                                Company Detail
                            </h5>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <div class="table-bg">
                                        <div class="table-responsive" style="overflow: auto;padding-bottom: -7px;">
                                            <table class="table">
                                                <thead style="background-color: rgba(22,160,133,0.9); color: white">
                                                    <tr class="head-title">
                                                        <th>Comapny Name</th>
                                                        <th>Contect Person</th>
                                                        <th>Mobile</th>
                                                        <th>Email-Id</th>
                                                        <th>StateName</th>
                                                        <th>CityName</th>
                                                        <th>GSTN</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td><span id="Company"></span>  </td>
                                                        <td><span id="ContectPerson"></span></td>
                                                        <td><span id="Mobile"></span></td>
                                                        <td><span id="EmailId"></span></td>
                                                        <td><span id="StateName"></span></td>
                                                        <td><span id="CityName"></span></td>
                                                        <td><span id="Gst"></span></td>
                                                    </tr>

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-2">
                                <label for="inputUsername">Project Name</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" value="@Model.ProjectName" id="ProjectName" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>
                           
                            <div class="col-md-2">
                                <label for="inputUsername">Project Starting Date</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" value="@Model.ProjectStartingDate" id="ProjectStartingDate" type="date" name="required" required="true" autocomplete="off" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-2">
                                <label for="inputUsername">Completion Date</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" value="@Model.CompletionDate" id="CompletionDate" type="date" name="required" required="true" autocomplete="off" min="@DateTime.Today.ToString("yyyy-MM-dd")"  />
                                </div>
                            </div>
                           
                            <div class="col-md-2">
                                <label for="inputUsername">Project Delivery Date</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" value="@Model.ProjectDeliveryDate" id="ProjectDeliveryDate" type="date" name="required" required="true" autocomplete="off" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-2">
                                <label for="inputUsername">Total Amount</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g, '')" value="@Model.TotalAmount" id="TotalAmount" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="inputUsername">Add Documentation</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">

                                    <div class="form-group form-file-upload form-file-multiple">
                                        <input type="file" id="Documentation" name="Documentation" multiple="" class="inputFileHidden">
                                        <input type="text" class="form-control inputFileVisible" placeholder="Please Select Project Documentation" multiple="">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                           
                            <div class="col-md-2">
                                <label for="inputUsername">Project Status</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    @if (Model.ProjectStatus == null)
                                    {
                                        <select id="ProjectStatus" class="form-control sn-required">
                                            <option value="Pending">select Status</option>
                                            <option value="Pending">Pending</option>
                                            <option value="Working">Working</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Delivered">Delivered</option>
                                        </select>
                                    }
                                    else if (Model.ProjectStatus == "Pending")
                                    {
                                        <select id="ProjectStatus" class="form-control sn-required">
                                            <option selected value="Pending">Pending</option>
                                            <option value="Working">Working</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Delivered">Delivered</option>
                                        </select>
                                    }
                                    else if (Model.ProjectStatus == "Working")
                                    {
                                        <select id="ProjectStatus" class="form-control sn-required">
                                            <option value="Pending">Pending</option>
                                            <option selected value="Working">Working</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Delivered">Delivered</option>
                                        </select>
                                    }
                                    else if (Model.ProjectStatus == "Completed")
                                    {
                                        <select id="ProjectStatus" class="form-control sn-required">
                                            <option value="Pending">Pending</option>
                                            <option value="Working">Working</option>
                                            <option selected value="Completed">Completed</option>
                                            <option value="Delivered">Delivered</option>
                                        </select>
                                    }
                                    else if (Model.ProjectStatus == "Delivered")
                                    {
                                        <select id="ProjectStatus" class="form-control sn-required">
                                            <option value="Pending">Pending</option>
                                            <option value="Working">Working</option>
                                            <option value="Completed">Completed</option>
                                            <option selected value="Delivered">Delivered</option>
                                        </select>
                                    }
                                </div>
                            </div>
                            <input type="text" hidden value="@Model.Id" id="Id" />
                            <input type="text" hidden value="@Model.ProjectCode" id="ProjectCode" />
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        @if (Model.Id != 0)
                        {
                            <button type="button" class="btn btn-primary" id="btnSubmit">Update</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary" id="btnSubmit">Submit</button>
                        }

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
<style type="text/css">
