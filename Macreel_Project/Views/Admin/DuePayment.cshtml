@{
    ViewBag.Title = "DuePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-body .Head1 th {
        font-size: 14px;
        font-weight: 600;
        padding: 8px;
    }

    .Head1 {
        background: #1f3e63;
        /* padding: 10px; */
        color: white;
    }

    .card-body table tr td {
        padding: 5px;
    }

    .tbod {
        font-size: 12px;
    }
</style>
<div class="panel-header panel-header-sm">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1 class="m-0">DUE PAYMENT LIST</h1>
                </div><!-- /.col -->
                <!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</div>
<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                
                <div class="card-body">
                    <div class="toolbar">

                    </div>
                        <section class="content" style="padding: 0 0.2rem;">
                            <div class="container list_table">
                                <section class="content">
                                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead>
                                            <tr class="Head1">
                                                <th>
                                                    SR NO.
                                                </th>
                                               
                                                <th>
                                                    COMPANY NAME
                                                </th>
                                                <th>
                                                    TOTAL AMOUNT
                                                </th>
                                                <th>
                                                    REMAINING AMOUNT
                                                </th>
                                             
                                            </tr>
                                        </thead>
                                        <tbody class="tbod">

                                            @if (ViewBag.list != null)
                                            {
                                                var sn = 1;
                                                foreach (var item in ViewBag.list as List<Macreel_Project.Models.Bussiness.Payments>)
                                                {
                                                    <tr>
                                                        <td>@sn</td>
                                                        <td>@item.CompanyName</td>
                                                        @*<td>@item.ProjectName</td>*@
                                                        <td>@item.TotalAmount</td>
                                                        <td>@item.RemainingAmount</td>
                                                    </tr>
                                                    sn++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                           </section> </div><!-- end content--></section>
</div><!--  end card  -->
        </div> <!-- end col-md-12 -->
    </div>
</div>




