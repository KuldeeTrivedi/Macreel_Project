                    if (cntrl.hasClass('sn-error')) cntrl.removeClass('sn-error');
                }
            });
            if (flag == 1) return;
            var Department = {
                DeptId: $("#DeptId").val(),
                DepartmentName: $("#DepartmentName").val(),
            }
            $.ajax({
                type: "POST",
                dataType: "json",
                data: Department,
                url: "/Admin/Department",
                Contenttype: "application/json; charset=utf-8",
                success: function (message) {
                    if (message == "success") {
                        Swal.fire({
                            title: "Success",
                            text: "Successfull Added!",
                            icon: "success",
