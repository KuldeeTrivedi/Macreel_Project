<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({
            dateFormat: 'yy-mm-dd', // Adjust the date format as per your requirement
            minDate: 0 // Disallows dates before today
        });
    });
</script>

<script>
    $("#btnSubmit").click(function () {
        $.ajaxSetup({
            beforeSend: function () {
                $(".processing").show();
            },
            complete: function () {
                $(".processing").hide();
            }
        });
        var flag = 0;
        var cntrl;
        $('input.sn-required,select.sn-required,textarea.sn-required').each(function () {
            cntrl = $(this);
            if (cntrl.val().toString().length == 0) {
                flag = 1;
                if (!cntrl.hasClass('sn-error'))
                    cntrl.removeClass('border-success');
                cntrl.addClass('sn-error');
                swal.fire({
                    title: "Error",
                    text: "Something is missing",
                    icon: "error",
                    timer: 6000,
                });
            }
            else {
                if (cntrl.hasClass('sn-error')) cntrl.removeClass('sn-error');
            }
        });
        if (flag == 1) return;
        var leave = {
            Id: $("#Id").val(),
            FromDate: $("#FromDate").val(),
            ToDate: $("#ToDate").val(),
            LeaveType: $("#LeaveType").find("option:selected").text(),
            Description: $("#Description").val(),
        }
        $.ajax({
            type: "POST",
            dataType: "json",
            data: leave,
            url: "/Employee/InsertApplyLeave",
            Contenttype: "application/json; charset=utf-8",
            success: function (message) {
                if (message == "success") {
                    swal.fire({
                        title: "Success",
                        text: "Successfully Applied!",
                        icon: "success",
                        timer: 6000,
                    });
                    window.location.href = "/Employee/ApplyLeave";
                }
                else if (message == "update") {
                    swal.fire({
                        title: "Success",
                        text: "Successfully Updated!",
                        icon: "success",
                        timer: 6000,
                    });
                    window.location.href = "/Employee/ApplyLeave";
                }
                else {
                    swal.fire({
                        title: "Error",
                        text: "Something Wrong!",
                        icon: "error",
                        timer: 6000,
                    });
                }

            }
        });
    });
    function reset() {
        $("#CompanyName").val(''),
            $("#ContactPerson").val(''),
            $("#ContactNo").val(''),
            $("#GSTNo").val(''),
            $("#State").val(''),
            $("#City").val(''),
            $("#Address").val(''),
            $("#Statecode").val(''),
            $("#Pincode").val(''),
            $("#PanNo").val(''),
            $("#EmailId").val(''),
            $("#Designation").val('')
    }
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+100",
        });
    });
</script>


