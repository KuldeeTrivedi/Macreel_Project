                            <div class="col-md-2">
                                <label for="nationality">Nationality:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" placeholder="Enter Your Nationality" value="@Model.Nationality" id="Nationality" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-left:10px">

                            <div class="col-md-2">
                                <label for="religion">Religion:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" placeholder="Enter Religion" value="@Model.Religion" id="Religion" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="maritalstatus">Marital Status:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="MaritalStatus" class="form-control sn-required">
                                        @if (Model.MaritalStatus == null)
                                        {
                                            <option>--Select Type--</option>
                                            <option value="Married">Married</option>
                                            <option value="Unmarried">Unmarried </option>
                                        }
                                        else if (Model.MaritalStatus == "Married")
                                        {

                                            <option selected value="Married">Married</option>
                                            <option value="Unmarried">Unmarried </option>
                                        }
                                        else
                                        {
                                            <option value="Married">Married</option>
                                            <option selected value="Unmarried">Unmarried </option>
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>
                    </details>

                    <details>
                        <summary style="font-weight: bold; color: rgba(22,160,133,0.9); margin: 15px; margin-bottom: 35px; font-size: 21px; ">---Present Address--- <hr /></summary>
                        <div class="row" style="padding-left:10px">

                            <div class="col-md-2">
                                <label for="present adress">Present Address:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" placeholder="Enter Present Address" value="@Model.PresentAddress" id="PresentAddress" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="state">State:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="State" class="form-control sn-required">
                                        <option>--Select State--</option>
                                        @if (ViewBag.STATE != null)
                                        {
                                            foreach (var item in ViewBag.STATE as List<SelectListItem>)
                                            {
                                                if (Model.State == item.Text)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-left:10px">

                            <div class="col-md-2">
                                <label for="city">City:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <select id="City" class="form-control sn-required">
                                        <option>--Select City--</option>
                                        @if (ViewBag.City != null)
                                        {
                                            foreach (var item in ViewBag.City as List<SelectListItem>)
                                            {
                                                if (Model.City == item.Text)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="pin">Pin:-</label>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input class="form-control sn-required" placeholder="Enter PIN" value="@Model.Pin" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g, '')" maxlength="6" id="Pin" type="text" name="required" required="true" autocomplete="off" />
                                </div>
                            </div>
                        </div>
                    </details>

                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <h5 class="m-0" style="text-align: center; background: rgba(22,160,133,0.9);color:white;font-weight:bold">-:In Case Of Emergency:-</h5>
                        </div><!-- /.col -->
                        <!-- /.col -->
                    </div>
                    <div class="row" style="padding-left:10px">

                        <div class="col-md-2">
                            <label for="emergencycontactperson">Emergency Contact Person:-</label>
                        </div>
                        <div class="col-sm-4">
