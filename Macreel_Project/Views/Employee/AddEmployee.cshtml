<div class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="TypeValidation"  class="form-horizontal">
                <div class="card ">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-4">
                            </div>

                        </div>
                    </div>
                    <div class="row" style="padding-left:10px">

                        <div class="col-md-2">
                            <label for="empcode">Employee Code:-</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input class="form-control sn-required" placeholder="Enter Employee Code" value="@Model.EmployeeCode" id="EmployeeCode" type="text" name="required" required="true" autocomplete="off" />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label for="empname">Employee Name:-</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input class="form-control sn-required" placeholder="Enter Employee Name" value="@Model.EmployeeName" id="EmployeeName" type="text" name="required" required="true" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-left:10px">

                        <div class="col-md-2">
                            <label for="department">Department:-</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group sn-required">
                                <select id="Department" class="form-control sn-required">
                                    <option>--Select Department--</option>
                                    @if (ViewBag.getdeprtlist != null)
                                    {
                                        foreach (var item in ViewBag.getdeprtlist as List<SelectListItem>)
                                        {
                                            if (Model.Department == item.Text)
                                            {
                                                <option selected value="@item.Value">@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }

                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label for="designation">Designation:-</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="Designations" class="form-control sn-required">
                                    <option>--Select Designation--</option>
                                    @if (ViewBag.getdeslist != null)
                                    {
                                        foreach (var item in ViewBag.getdeslist as List<SelectListItem>)
                                        {
                                            if (Model.Designation == item.Text)
                                            {
                                                <option selected value="@item.Value">@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-left:10px">

                        <div class="col-md-2">
                            <label for="reportingmanager">Reporting Manager:-</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="ReportingManager" class="form-control sn-required">
                                    <option>--Select Reporting Manager--</option>
                                    @if (ViewBag.login != null)
                                    {
                                        foreach (var item in ViewBag.login as List<Macreel_Project.Models.Bussiness.Login>)
                                        {
                                            if (Model.ReportingManager == item.UserName)
                                            {
                                                <option selected value="@item.EmpId">@item.UserName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.EmpId">@item.UserName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label for="emailid">Profile Picture:-</label>
                        </div>
                        <div class="col-md-4">
