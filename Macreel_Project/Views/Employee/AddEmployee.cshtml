                                <div class="form-group">
                                    <input class="form-control sn-required" placeholder="Enter Bank Account No" value="@Model.AccountNo" id="AccountNo" oninput="validateAccountNumber(this)" onkeydown="limitAccountNumberLength(this)" type="text" name="required" required="true" autocomplete="off" />
